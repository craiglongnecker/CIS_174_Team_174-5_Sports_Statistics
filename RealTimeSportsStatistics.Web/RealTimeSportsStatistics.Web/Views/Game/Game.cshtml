			<fieldset>
				<legend>Input</legend>
				<table class="table table-bordered table-responsive-sm">
					<tbody>
						<tr>
							<td><button id="team1Touchdown">Touchdown</button></td> <!--adds points to total score, counter label+= 6-->
							<td><button id="team1ExtraPoint">Extra Point</button></td> <!--adds one point to score-->
							<td><button id="team1FieldGoal">Field Goal</button></td> <!--adds 3 pts to score, field goal count++-->
							<td><button id="team1FirstDown">First Down</button></td> <!-- first down count++-->
						</tr>
						<tr>
							<td><button id="team1PassCom">Pass Completed</button></td> <!--pass completed lbl ++-->
							<td><button id="team1PassInt">Pass Intercepted</button></td> <!-- pass intercepted lbl++-->
							<td>Passing Yards: <input size="2" id="team1PassYardsInput"></td>	<!--add input to total passing yard stat-->
							<td><button id="team1Fumble">Fumble</button></td> <!--fumble lbl++-->
						</tr>
						<tr>
							<td><button id="team1Punt">Punt</button></td><!--counter for punts++-->
							<td>Punt Yards: <input size="2" type="text" name="team1PuntYardInput"></td> <!--add input value to current punt yards total-->
							<td><button id="team1Penalty">Penalty</button></td> <!--penalty count++-->

						<label class="radio-inline">
							<input type="radio" name="otRButton"> OT<br>
						</label>
						<label class="radio-inline">
							<input type="radio" name="finalRButton"> Final<br>
						</label>
					</form>
				</div>
				<div class="col col-sm-3" style="text-align:center">
					<label id="team2CurrentScore">0</label>
				</div>
			</div><!---close row for team score, quarter selection----->

		</div> <!-----close score area-------------------------------------------------------------->


		<div class="team1Area">
			<!----open team1 Area------------------------------------------------------------------->
			<label id="team1StatsAreaName">Team 1 Name</label>
			<form>
				<fieldset>
					<legend>Statistics</legend>
					<div class="col">
						<table class="table table-bordered table-responsive-sm">
							<tbody>
								<tr>
									<td>Touchdowns: <label id="team1TocuhdownLbl">0</label></td>
									<td>Field Goals: <label id="team1FieldGoalLbl">0</label></td>
								</tr>
								<tr>
									<td>Passing Yards: <label id="team1PassYardsLbl">0</label></td>
									<td>First Downs: <label id="team1FirstDownLbl">0</label></td>
								</tr>
								<tr>
									<td>Completed Passes: <label id="team1PassComLbl">0</label></td>
